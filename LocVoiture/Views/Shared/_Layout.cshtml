    <!-- <link rel="stylesheet" href="css/icomoon.css"> -->
    <link rel="stylesheet" href="~/Content/icomoon.css" />

    <!-- <link rel="stylesheet" href="css/style.css"> -->
    <link rel="stylesheet" href="~/Content/style.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">

</head>
<body>

    <!-- NAV -->
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand">Car<span>Rent</span></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
            </button>

            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">@Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item active dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-gear"></i> Management
                            </a>

                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @Html.ActionLink("Categorie", "Index", "Categories", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                                @Html.ActionLink("Modèle", "Index", "Modeles", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                                @Html.ActionLink("Voiture", "Index", "Voitures", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                                @Html.ActionLink("Reservations", "Index", "Reservations", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                            </div>
                        </li>
                    }
                </ul>
            </div>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <!-- END NAV -->

    @RenderBody()

    <!-- FOOTER -->
    <footer class="ftco-footer ftco-bg-dark ftco-section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2"><a href="#" class="logo">Car<span>Rent</span></a></h2>
                        <p>Fast &amp; Easy Way To Rent A Car</p>
                        <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                            <li class="ftco-animate"><a href="#"><span><i class="bi bi-twitter"></i></span></a></li>
                            <li class="ftco-animate"><a href="#"><span><i class="bi bi-facebook"></i></span></a></li>
                            <li class="ftco-animate"><a href="#"><span><i class="bi bi-instagram"></i></span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Have a Questions?</h2>
                        <div class="block-23 mb-3">
                            <ul>
                                <li><span><i class="bi bi-map"></i></span><span class="text">203 Fake St. Mountain View, San Francisco, California, USA</span></li>
                                <li><a href="#"><span><i class="bi bi-telephone"></i></span><span class="text">+2 392 3929 210</span></a></li>
                                <li><a href="#"><span><i class="bi bi-envelope"></i></span><span class="text">info@yourdomain.com</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- END FOOTER -->

    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>

    <!-- <script src="js/jquery.min.js"></script> -->
    <script src="~/Scripts/jquery.min.js"></script>

    <!-- <script src="js/jquery-migrate-3.0.1.min.js"></script> -->
    <script src="~/Scripts/jquery-migrate-3.0.1.min.js"></script>

    <!-- <script src="js/popper.min.js"></script> -->
    <script src="~/Scripts/popper.min.js"></script>

    <!-- <script src="js/bootstrap.min.js"></script> -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- <script src="js/jquery.easing.1.3.js"></script> -->
    <script src="~/Scripts/jquery.easing.1.3.js"></script>

    <!-- <script src="js/jquery.waypoints.min.js"></script> -->
    <script src="~/Scripts/jquery.waypoints.min.js"></script>

    <!-- <script src="js/jquery.stellar.min.js"></script> -->
    <script src="~/Scripts/jquery.stellar.min.js"></script>

    <!-- <script src="js/owl.carousel.min.js"></script> -->
    <script src="~/Scripts/owl.carousel.min.js"></script>

    <!-- <script src="js/jquery.magnific-popup.min.js"></script> -->
    <script src="~/Scripts/jquery.magnific-popup.min.js"></script>

    <!-- <script src="js/aos.js"></script> -->
    <script src="~/Scripts/aos.js"></script>

    <!-- <script src="js/jquery.animateNumber.min.js"></script> -->
    <script src="~/Scripts/jquery.animateNumber.min.js"></script>

    <!-- <script src="js/bootstrap-datepicker.js"></script> -->
    <script src="~/Scripts/bootstrap-datepicker.js"></script>

    <!-- <script src="js/jquery.timepicker.min.js"></script> -->
    <script src="~/Scripts/jquery.timepicker.min.js"></script>

    <!-- <script src="js/scrollax.min.js"></script> -->
    <script src="~/Scripts/scrollax.min.js"></script>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>

    <!-- <script src="js/google-map.js"></script> -->
    <script src="~/Scripts/google-map.js"></script>

    <!-- <script src="js/main.js"></script> -->
    <script src="~/Scripts/main.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>